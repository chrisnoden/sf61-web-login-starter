{% extends 'login/base.html.twig' %}

{% block title %}2fa Activation{% endblock %}

{% block page_title %}Enable Two Factor Authentication{% endblock %}

{% block section %}
    {% if validationError is defined %}
        <div class="mt-6 text-center font-extrabold text-red-600 alert alert-danger">{{ validationError }}</div>
    {% endif %}

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <form class="space-y-6" method="post">
                <div class="bg-light mt-2 p-4">
                    <p class="mb-3 font-weight-normal">Use 1Password, Authy or Google Authenticator to Scan the QR Code</p>
                    <img src="{{ path('login_2fa_qr_code') }}" alt="2fa QR Code">
                </div>

                <p>Input the code generated by your app to complete setup of 2FA</p>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700"> One Time Password </label>
                    <div class="mt-1">
                        <input
                            id="_auth_code"
                            class="form-control appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                            type="tel"
                            name="auth_code"
                            autocomplete="one-time-code"
                            autofocus
                            inputmode="numeric"
                            pattern="[0-9]*"
                        />
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Validate 2FA Setup
                    </button>

                    <p class="w-full flex justify-center cancel"><a
                            href="{{ url('homepage') }}">{{ "cancel"|trans({}, 'SchebTwoFactorBundle') }}</a></p>
                </div>
            </form>
        </div>
    </div>
{% endblock %}